<UserControl x:Class="ProjectLex.InventoryManagement.Desktop.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <Grid>
        <ScrollViewer Style="{StaticResource MaterialDesignScrollViewer}" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid HorizontalAlignment="Center" Margin="0 20 0 0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/logo.png" Width="50" VerticalAlignment="Center"/>
                        <TextBlock Text="IESE" FontFamily="Bebas Neue" FontSize="50" VerticalAlignment="center"/>
                    </StackPanel>
                </Grid>

                <Grid HorizontalAlignment="Center" Margin="0 10 0 10">
                    <Label FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Padding="20 0 20 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Hello, " />
                            <TextBlock Text="{Binding CurrentStaff.StaffUsername}"/>
                        </StackPanel>
                    </Label>
                </Grid>


                <Grid Margin="0 0 0 0">
                    <StackPanel>
                        <Button Command="{Binding NavigateToDashboardCommand}" HorizontalContentAlignment="Left" 
                            Background="{DynamicResource MaterialDesignBackground}"

                        Style="{StaticResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="ViewDashboardOutline" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Dashboard" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToOrderListCommand}" HorizontalContentAlignment="Left" 
                            Background="{DynamicResource MaterialDesignBackground}"

                        Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.OrdersView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="CartCheck" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Orders" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToCustomerListCommand}" 
                                HorizontalContentAlignment="Left" 
                            Background="{DynamicResource MaterialDesignBackground}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.CustomersView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="BusinessCardOutline" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Customers" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>


                <Grid Margin="0 0 0 0">
                    <StackPanel>
                        <Button Command="{Binding NavigateToProductListCommand}"         HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.ProductsView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>          
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="BoxOutline" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Products" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToStorageListCommand}"         HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.StoragesView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="Storage" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Storages" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToDefectiveListCommand}"         HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.DefectivesView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="GlassBroken" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Defectives" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>




                <Grid Margin="0 20 0 0">
                    <StackPanel>
                        <Button Command="{Binding NavigateToCategoryListCommand}"        HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.CategoriesView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="CategoryOutline" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Categories" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToLocationListCommand}"        HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.LocationsView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="LocationOutline" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Locations" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToSupplierListCommand}"         HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.SuppliersView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="ClipboardListOutline" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Suppliers" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToCarrierListCommand}"        HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.SuppliersView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="Carriage"  VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Carriers" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>                        
                    </StackPanel>
                </Grid>


                <Grid Margin="0 20 0 0">
                    <StackPanel>
                        <Button Command="{Binding NavigateToRoleListCommand}"        HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.RolesView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="PersonOutline" VerticalAlignment="Center" />
                                <Label Margin="20 0 0 0" Content="Roles" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToStaffListCommand}"         HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                            <Button.Visibility>
                                <Binding Path="CurrentStaff.Role.StaffsView">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <materialDesign:PackIcon Kind="CustomerService" VerticalAlignment="Center"/>
                                <Label Margin="20 0 0 0" Content="Staffs" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>


                <Grid Margin="0 20 0 0">
                    <Button Command="{Binding NavigateToLogListCommand}"        HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.Visibility>
                            <Binding Path="CurrentStaff.Role.LogsView">
                                <Binding.Converter>
                                    <BooleanToVisibilityConverter />
                                </Binding.Converter>
                            </Binding>
                        </Button.Visibility>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                            <materialDesign:PackIcon Kind="File" VerticalAlignment="Center"/>
                            <Label Margin="20 0 0 0" Content="Activity Logs" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </Grid>


                <Grid Margin="0 20 0 0">
                    <Button Command="{Binding LogOutCommand}"         HorizontalContentAlignment="Left" 
    Background="{DynamicResource MaterialDesignBackground}"
Style="{StaticResource MaterialDesignFlatButton}">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                            <materialDesign:PackIcon Kind="Logout" VerticalAlignment="Center"/>
                            <Label Margin="20 0 0 0" Content="Logout" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</UserControl>
